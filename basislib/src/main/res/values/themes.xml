<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Base application theme. -->
    <style name="DefAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:textSize">42mm</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="SplashTheme" parent="DefAppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/start_window</item>
    </style>


    <style name="Transparent" parent="DefAppTheme">
        <item name="android:windowAnimationStyle">@style/Animation.Activity.TransparentStyle</item>
        <item name="android:windowFrame">@null</item>   <!--Dialog的windowFrame框为无-->
        <item name="android:windowIsTranslucent">false</item> <!--是否半透明-->
        <item name="android:windowDisablePreview">true</item> <!--支持预览-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>  <!--是否显示title-->
        <item name="android:windowIsFloating">true</item>   <!--是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">true</item> <!--设置黑暗度-->
        <item name="android:backgroundDimAmount">0.0</item> <!-- 0.0不暗，1.0全暗-->
    </style>


    <style name="DialogActivity" parent="Transparent">
        <item name="android:backgroundDimAmount">0.3</item> <!-- 0.0不暗，1.0全暗-->
    </style>


</resources>