<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--左右滑入 滑出, 原界面联动 -->
    <style name="ActivityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/push_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/push_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/push_out_right</item>
    </style>


    <!-- 左右滑入 滑出，原界面不动-->
    <style name="ActivityLeftRight" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/not</item>
        <item name="android:activityCloseEnterAnimation">@anim/not</item>
        <item name="android:activityCloseExitAnimation">@anim/push_out_right</item>
    </style>


    <!-- 淡入淡出 ，原界面不动-->
    <style name="Animation.Activity.TransparentStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/pop_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/not</item>
        <item name="android:activityCloseEnterAnimation">@anim/not</item>
        <item name="android:activityCloseExitAnimation">@anim/pop_fade_out</item>
    </style>


</resources>