<resources>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity上-->
        <item name="android:windowIsTranslucent">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/main_color</item>
    </style>


    <!-- 按钮样式 -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/widget_selector_button</item>
        <item name="android:textSize">54mm</item>
        <item name="android:height">132mm</item>
        <item name="android:width">630mm</item>
    </style>


    <!-- RadioButton 样式-->
    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/widget_selector_radio_button</item>
        <item name="android:textColor">#03318C</item>
        <item name="android:textSize">42mm</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">72mm</item>
        <item name="android:paddingRight">72mm</item>
        <item name="android:paddingTop">15mm</item>
        <item name="android:paddingBottom">15mm</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/widget_selector_edit_bg</item>
        <item name="android:textCursorDrawable">@drawable/widget_shape_cursor_color</item>
        <item name="android:textColor">@color/grey_33</item>
        <item name="android:textColorHint">#D6D6D6</item>
        <item name="android:textSize">42mm</item>
        <item name="android:height">108mm</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/widget_selector_spinner</item>
        <item name="android:height">108mm</item>
        <item name="android:textSize">42mm</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">#03318C</item>
        <item name="colorPrimaryDark">#03318C</item>
        <item name="colorAccent">#03318C</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <!--自定义seekBar style-->
    <style name="CustomSeekBarStyle">
        <item name="android:maxHeight">5dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/common_seekbar_progress</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:thumb">@mipmap/icon_seekbar_progress</item>
    </style>

    <!--表单页面一级label style-->
    <style name="CommonFormOneLevelStyle">
        <item name="android:textSize">60mm</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--表单页面er级label style-->
    <style name="CommonFormTwoLevelStyle">
        <item name="android:textSize">54mm</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>