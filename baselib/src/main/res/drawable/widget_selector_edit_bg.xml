<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#03318C"/>
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape>
                    <solid android:color="@android:color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>


    <item android:state_selected="true">
        <layer-list>
            <item >
                <shape>
                    <solid android:color="#ED0101"/>
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape>
                    <solid android:color="@android:color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item >
                <shape>
                    <solid android:color="#E6E6E6"/>
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape>
                    <solid android:color="@android:color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#E6E6E6"/>
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape>
                    <solid android:color="@android:color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>